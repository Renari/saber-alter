    "url": "https://github.com/Renari/saber-alter/issues"
  },
  "homepage": "https://github.com/Renari/saber-alter#readme",
  "dependencies": {
    "async-mutex": "^0.3.2",
    "axios": "^0.24.0",
    "dateformat": "^5.0.2",
    "discord.js": "^13.3.1",
    "erlpack": "^0.1.3",
    "gm": "^1.23.1",
    "nedb": "^1.8.0",
    "node-cron": "^3.0.0",
    "pixiv-app-api": "^1.2.1",
